{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/xui",
  "assets": [
    {
      "glob": "index.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "core/*.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "theming/*.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "table/*.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "menu/*.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "layout/*.scss",
      "input": "src",
      "output": "."
    }
  ],
  "allowedNonPeerDependencies": [
    "ngx-image-cropper"
  ],
  "lib": {
    "entryFile": "src/index.ts"
  }
}
